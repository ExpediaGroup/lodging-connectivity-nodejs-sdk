{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "target": "es5",
    "outDir": "lib",
    "declaration": true,
    "incremental": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "@expediagroup/lodging-connectivity-sdk/*": ["./code/src/*"]
    },
    "lib": [
      "es2017"
    ]
  },
  "include": ["code/src", "examples/src"],
}

